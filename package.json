{
  "name": "helper-copyright",
  "version": "2.1.1",
  "description": "Template helper for adding a basic, one-line copyright statement, with formatting appropriate for LICENSE/LICENSE-MIT or README templates. Used with Verb, but should work with any Handlebars, Lo-Dash, underscore, or any template engine that allows helper functions to be registered.",
  "homepage": "https://github.com/helpers/helper-copyright",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "helpers/helper-copyright",
  "bugs": {
    "url": "https://github.com/helpers/helper-copyright/issues"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "utils.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "lazy-cache": "^2.0.1",
    "markdown-link": "^0.1.1",
    "mixin-deep": "^1.1.3",
    "parse-author": "^1.0.0",
    "update-copyright": "^0.2.3",
    "year": "^0.2.1"
  },
  "devDependencies": {
    "engine": "^0.1.11",
    "gulp-format-md": "^0.1.7",
    "handlebars": "^4.0.5",
    "mocha": "^2.4.5"
  },
  "keywords": [
    "assemble",
    "handlebars",
    "helper",
    "lodash",
    "template",
    "verb"
  ],
  "verb": {
    "run": true,
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": [
        "helper-license",
        "helper-reflinks",
        "helper-related",
        "verb"
      ]
    },
    "reflinks": [
      "verb"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
